[Unit]
Description=BBS2 WorkerMan Service
After=network.target
Wants=network.target

[Service]
User=nginx
Group=nginx
Type=forking
ExecStart=/usr/bin/php /var/www/bbs/bin/start_worker.php start -d
ExecReload=/usr/bin/php /var/www/bbs/bin/start_worker.php restart -d
ExecStop=/usr/bin/php /var/www/bbs/bin/start_worker.php stop
PrivateTmp=true
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
